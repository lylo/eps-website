---
layout: base.njk
---

<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row gap-8">
    <main class="w-full md:w-2/3">
      <article class="bg-white rounded-lg shadow-md p-6 mb-8">
        <header class="mb-8">
          <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
          {% if date %}
          <p class="text-gray-600">{{ date | formatDate }}</p>
          {% endif %}
        </header>

        <div class="prose prose-lg max-w-none">
          {{ content | safe }}
        </div>
      </article>
    </main>

    <aside class="w-full md:w-1/3">
      <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-xl font-bold mb-4">Quick Links</h2>
        <ul class="space-y-2">
          <li><a href="/about/" class="text-blue-800 hover:text-blue-600">About EPS</a></li>
          <li><a href="/whats-on-v2/" class="text-blue-800 hover:text-blue-600">What's On</a></li>
          <li><a href="/membership-v2/" class="text-blue-800 hover:text-blue-600">Membership</a></li>
          <li><a href="/exhibitions-v2/" class="text-blue-800 hover:text-blue-600">Exhibitions</a></li>
          <li><a href="/competitions-v2/" class="text-blue-800 hover:text-blue-600">Competitions</a></li>
          <li><a href="/facilities-v2/" class="text-blue-800 hover:text-blue-600">Facilities</a></li>
        </ul>
      </div>

      {% if collections.latestAnnouncements %}
      <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-xl font-bold mb-4">Latest News</h2>
        <ul class="space-y-4">
          {% for post in collections.latestAnnouncements | limit(3) %}
          <li>
            <h3 class="font-medium"><a href="{{ post.url }}" class="text-blue-800 hover:text-blue-600">{{ post.data.title }}</a></h3>
            <p class="text-sm text-gray-600">{{ post.date | formatDate }}</p>
          </li>
          {% endfor %}
        </ul>
        <div class="mt-4">
          <a href="/announcement/" class="text-blue-800 hover:text-blue-600 text-sm">View all news â†’</a>
        </div>
      </div>
      {% endif %}
    </aside>
  </div>
</div>