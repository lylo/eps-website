---
layout: base.njk
---

<div class="container mx-auto px-4 py-8">
  <article class="bg-white rounded-lg shadow-md p-6 mb-8">
    <header class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
      {% if date %}
      <p class="text-gray-600">{{ date | formatDate }}</p>
      {% endif %}
    </header>

    <div class="prose prose-lg max-w-none mb-8">
      {{ content | safe }}
    </div>

    {% if gallery %}
    <div class="mt-10">
      <h2 class="text-2xl font-bold mb-6">Exhibition Gallery</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for image in gallery %}
        <div class="photo-card">
          <img src="{{ image.url }}" alt="{{ image.alt or image.caption or 'Exhibition image' }}" class="w-full h-64 object-cover">
          {% if image.caption %}
          <div class="p-4 bg-white">
            <p class="font-semibold">{{ image.caption }}</p>
            {% if image.photographer %}
            <p class="text-sm text-gray-600">Photographer: {{ image.photographer }}</p>
            {% endif %}
          </div>
          {% endif %}
        </div>
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </article>
</div>