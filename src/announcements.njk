---
layout: base.njk
title: Announcements & News
description: Latest news and announcements from Edinburgh Photographic Society
pagination:
  data: collections.announcements
  size: 10
  alias: announcements
---

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">News & Announcements</h1>

  <div class="grid grid-cols-1 gap-8">
    {% for post in announcements %}
    <article class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">
          <a href="{{ post.url }}" class="text-blue-800 hover:text-blue-600">{{ post.data.title }}</a>
        </h2>
        {% if post.data.date %}
        <p class="text-sm text-gray-600 mb-4">{{ post.data.date | formatDate }}</p>
        {% endif %}

        <div class="prose max-w-none mb-4">
          {% set excerpt = post.templateContent | striptags | truncate(300) %}
          <p>{{ excerpt }}</p>
        </div>

        <div class="mt-4">
          <a href="{{ post.url }}" class="text-blue-800 hover:text-blue-600">Read more â†’</a>
        </div>
      </div>
    </article>
    {% else %}
    <p class="text-center py-8">No announcements found.</p>
    {% endfor %}
  </div>

  {% if pagination.pages.length > 1 %}
  <nav class="mt-12 flex justify-center">
    <ul class="flex space-x-2">
      {% if pagination.href.previous %}
      <li><a href="{{ pagination.href.previous }}" class="px-4 py-2 bg-white rounded border hover:bg-gray-100">Previous</a></li>
      {% endif %}

      {% for pageUrl in pagination.hrefs %}
        {% set pageNumber = loop.index %}
        <li><a href="{{ pageUrl }}" class="px-4 py-2 {% if pagination.pageNumber == loop.index0 %}bg-blue-800 text-white{% else %}bg-white hover:bg-gray-100{% endif %} rounded border">{{ pageNumber }}</a></li>
      {% endfor %}

      {% if pagination.href.next %}
      <li><a href="{{ pagination.href.next }}" class="px-4 py-2 bg-white rounded border hover:bg-gray-100">Next</a></li>
      {% endif %}
    </ul>
  </nav>
  {% endif %}
</div>