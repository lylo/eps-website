---
layout: base.njk
title: All Exhibitions
description: View all exhibitions from the Edinburgh Photographic Society
pagination:
  data: collections.exhibitions
  size: 12
  alias: exhibitions
---

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Exhibitions</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {% for exhibition in exhibitions %}
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      {% set featuredImage = exhibition.data.content | extractFirstImage %}
      {% if featuredImage %}
      <div class="h-48 overflow-hidden">
        <img src="{{ featuredImage }}" alt="{{ exhibition.data.title }}" class="w-full h-full object-cover">
      </div>
      {% endif %}

      <div class="p-6">
        <h2 class="text-xl font-bold mb-2">
          <a href="{{ exhibition.url }}" class="text-blue-800 hover:text-blue-600">{{ exhibition.data.title }}</a>
        </h2>
        {% if exhibition.data.date %}
        <p class="text-sm text-gray-600 mb-3">{{ exhibition.data.date | formatDate }}</p>
        {% endif %}
        <div class="mt-4">
          <a href="{{ exhibition.url }}" class="text-blue-800 hover:text-blue-600">View Exhibition â†’</a>
        </div>
      </div>
    </div>
    {% else %}
    <p class="col-span-full text-center py-8">No exhibitions found.</p>
    {% endfor %}
  </div>

  {% if pagination.pages.length > 1 %}
  <nav class="mt-12 flex justify-center">
    <ul class="flex space-x-2">
      {% if pagination.href.previous %}
      <li><a href="{{ pagination.href.previous }}" class="px-4 py-2 bg-white rounded border hover:bg-gray-100">Previous</a></li>
      {% endif %}

      {% for pageUrl in pagination.hrefs %}
        {% set pageNumber = loop.index %}
        <li><a href="{{ pageUrl }}" class="px-4 py-2 {% if pagination.pageNumber == loop.index0 %}bg-blue-800 text-white{% else %}bg-white hover:bg-gray-100{% endif %} rounded border">{{ pageNumber }}</a></li>
      {% endfor %}

      {% if pagination.href.next %}
      <li><a href="{{ pagination.href.next }}" class="px-4 py-2 bg-white rounded border hover:bg-gray-100">Next</a></li>
      {% endif %}
    </ul>
  </nav>
  {% endif %}
</div>